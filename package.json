{
  "name": "static-website",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:eleventy": "NODE_ENV=development eleventy --serve --quiet",
    "dev:parcel": "parcel watch src/_assets/css/main.css src/_assets/js/index.js --dist-dir _site/assets",
    "build": "npm-run-all -s prod:*",
    "prod:eleventy": "NODE_ENV=production eleventy",
    "prod:parcel": "parcel build src/_assets/css/main.css src/_assets/js/index.js --dist-dir _site/assets"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.8.3",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "tailwindcss": "^3.2.7"
  }
}
